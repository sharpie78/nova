{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nova-editor",
  "version": "0.1.0",
  "identifier": "nova-editor",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "url": "editor.html",
        "title": "nova-editor",
        "width": 1280,
        "height": 800,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "appimage",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
